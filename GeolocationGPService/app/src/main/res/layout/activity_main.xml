<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/rLayout">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblStatus" />

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblLat"
        android:layout_below="@+id/lblStatus"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblLon"
        android:layout_below="@+id/lblLat"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PosicionActual"
        android:id="@+id/btnLocActual"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="obtenerPosicionActual" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar posiciones"
        android:id="@+id/btnLocUpdate"
        android:layout_alignTop="@+id/lblLat"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
