<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/rootLinearLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/textView"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="7"
            android:id="@+id/btn7"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="8"
            android:id="@+id/btn8"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="9"
            android:id="@+id/btn9"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="/"
            android:id="@+id/btnDiv"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="4"
            android:id="@+id/btn4"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="5"
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="6"
            android:id="@+id/btn6"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="*"
            android:id="@+id/btnMulti"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="1"
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="2"
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="3"
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="-"
            android:id="@+id/btnRest"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="."
            android:id="@+id/btnPunto"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="0"
            android:id="@+id/btn0"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="="
            android:id="@+id/btnIgual"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="+"
            android:id="@+id/btnSum"
            android:layout_weight="1"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />
    </LinearLayout>

</LinearLayout>
